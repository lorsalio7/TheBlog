header.site-header.page__site-header
  .container.site-header__container
    .site-header__top
      a(href="/").logo Your Name
      nav.site-navigation
        ul.site-navigation__list
          +site_menu(siteNavigation)
        button(type="button" aria-label="Change theme").theme-toggle
          span.theme-toggle__switch-slider
        button(type="button" aria-label="Close menu").close-button
          span.close-button__line
      button(type="button" class="burger-button" aria-label="Open menu")
        span.burger-button__line
    .site-header__bottom
      h1.site-header__title The blog


